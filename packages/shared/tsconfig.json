{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDir": ".",
    "moduleResolution": "bundler",
    "noImplicitOverride": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "tsdown.config.ts"],
  "exclude": ["**/node_modules"]
}
